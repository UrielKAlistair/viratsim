<?xml version="1.0"?> 
<robot name="virat" xmlns:xacro="http://ros.org/wiki/xacro">

	
	<xacro:macro name="default_inertial" params="mass">
		<inertial>
			<origin rpy="0.0 0 0" xyz="0 0 0"/>
			<mass value="${mass}" />
			<inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
		</inertial>
	</xacro:macro>
	
	<material name="white">
		<color rgba="1 1 1 1"/>
	</material>

	<link name="body">
		<visual>

			<origin rpy="0.0 0 0" xyz="0 0 0"/>
			
			<geometry>
				<mesh filename="package://viratsim/meshes/body/bot2.dae"/>
        		</geometry>
        					
			<material name="white"/>
		</visual>
		
		<collision>
			<origin rpy="0.0 0 0" xyz="0 0 0"/>
			
			<geometry>
				<mesh filename="package://viratsim/meshes/body/bot2.dae"/>
			</geometry>

		</collision>

		<xacro:default_inertial mass="50"/>

	</link>

	<link name="front_wheel">
		<visual>
			<origin rpy="0.0 0 0" xyz="0.5 0 0"/>

			<geometry>
				<mesh filename="package://viratsim/meshes/wheels/castors1.dae"/>
        		</geometry>
        		
        		<material name="white"/>
		</visual>		        
		
		<collision>
			<origin rpy="0.0 0 0" xyz="0.5 0 0"/>

			<geometry>
				<mesh filename="package://viratsim/meshes/wheels/castors1.dae"/>
        		</geometry>
		</collision>
			
		<xacro:default_inertial mass="1"/>
	</link>

	<joint name="front_axle" type="continuous">
		<parent link="body"/>
		<child link="front_wheel"/>
		<origin xyz="0.5 0 0.05"/>
	</joint>

	<link name="rear_wheel">
		<visual>

			<origin rpy="0.0 0 0" xyz="0 0 0"/>

			<geometry>
				<mesh filename="package://viratsim/meshes/wheels/tyre1.dae"/>
        		</geometry>
        		
        		<material name="white"/>		
		</visual>
		
		<collision>

			<origin rpy="0.0 0 0" xyz="0 0 0"/>

			<geometry>
				<mesh filename="package://viratsim/meshes/wheels/tyre1.dae"/>
        		</geometry>
        		
		</collision>
					
		<xacro:default_inertial mass="5"/>
	</link>

	<joint name="rear_axle" type="continuous">
		<parent link="body"/>
		<child link="rear_wheel"/>
		<origin xyz="0 0 0"/>
	</joint>
</robot>
