<?xml version="1.0"?>
<robot name="virat">
	<link name="body">
		<visual>
			<geometry>
				<mesh filename="package://viratsim/meshes/body/bot2.dae"/>
        		</geometry>
        		
			<origin rpy="0.0 0 0" xyz="0 0 0"/>
		</visual>
		
		<collision>
			<geometry>
				<box size="0.75 1 1">
        		</geometry>
        		
			<origin rpy="0.0 0 0" xyz="0 0 0"/>
		</collision>
		
		<inertial>
			<mass value="0.5"/>
			<inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
		</inertial>
		
	</link>
	
	<link name="front_wheel">
		<visual>
			<origin rpy="0.0 0 0" xyz="0.5 0 0"/>
			
			<geometry>
				<mesh filename="package://viratsim/meshes/wheels/castors1.dae"/>
        		</geometry>
		</visual>		        		
        	<collision>
			<geometry>
				<box size="0.1 0.2 0.2"/>
        		</geometry>
        		
			<origin rpy="0.0 0 0" xyz="0 0 0"/>
		</collision>
			
	</link>
	
	<joint name="front_axle" type="continuous">
		<parent link="body"/>
		<child link="front_wheel"/>
		<origin xyz="0.5 0 0.05"/>
	</joint>
	
	<link name="rear_wheel">
		<visual>
			
			<origin rpy="0.0 0 0" xyz="0 0 0"/>
			
			<geometry>
				<mesh filename="package://viratsim/meshes/wheels/tyre1.dae"/>
        		</geometry>		
		</visual>
		<collision>
			<geometry>
				<box size="0.1 0.2 0.05"/>
        		</geometry>
        		
			<origin rpy="0.0 0 0" xyz="0 0 0"/>
		</collision>
		
	</link>
	
	<joint name="rear_axle" type="continuous">
		<parent link="body"/>
		<child link="rear_wheel"/>
		<origin xyz="0 0 0"/>
	</joint>
</robot>
